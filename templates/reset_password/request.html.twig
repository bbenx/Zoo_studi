{% extends 'base_admin.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Mot de passe oublié</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre adresse Email de connexion et nous vous <br>enverrons un lien de réinitialisation de mot de passe.
            </small>
        </div>

        <button class="btn btn-primary mt-2">Envoyer l'Email</button>
    {{ form_end(requestForm) }}
{% endblock %}
