{# index.html.twig #}

{% extends 'base_admin.html.twig' %}

{% block title %}Avis index{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Avis</h1>
</div>

<h2>Avis à valider</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Pseudo</th>
            <th class="comment-column">Commentaire</th>
            <th>Date de création</th>
            <th>Date de modification</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for avi in avisAValider %}
            <tr>
                <td>{{ avi.id }}</td>
                <td>{{ avi.Pseudo }}</td>
                <td class="comment-column">{{ avi.Commentaire }}</td>
                <td>{{ avi.creationDate ? avi.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ avi.modificationDate ? avi.modificationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_avis_valider', {'id': avi.id, '_token': csrf_token('valider' ~ avi.id)}) }}" class="btn btn-success btn-sm mr-2">
                        <i class="fas fa-check"></i>
                        Valider
                    </a>
                    <a href="{{ path('app_avis_delete', {'id': avi.id, '_token': csrf_token('delete' ~ avi.id)}) }}" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i>
                        Supprimer
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun avis à valider</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<h2>Avis validés</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Pseudo</th>
            <th class="comment-column">Commentaire</th>
            <th>Date de création</th>
            <th>Date de modification</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for avi in avisAValider %}
    <tr>
        <td>{{ avi.id }}</td>
        <td>{{ avi.Pseudo }}</td>
        <td class="comment-column">{{ avi.Commentaire }}</td>
        <td>{{ avi.creationDate ? avi.creationDate|date('Y-m-d H:i:s') : '' }}</td>
        <td>{{ avi.modificationDate ? avi.modificationDate|date('Y-m-d H:i:s') : '' }}</td>
        <td>
            <form method="POST" action="{{ path('app_avis_valider', {'id': avi.id}) }}" class="d-inline">
                <input type="hidden" name="_token" value="{{ csrf_token('valider' ~ avi.id) }}">
                <button type="submit" class="btn btn-success btn-sm mr-2">
                    <i class="fas fa-check"></i>
                    Valider
                </button>
            </form>
            <a href="{{ path('app_avis_delete', {'id': avi.id, '_token': csrf_token('delete' ~ avi.id)}) }}" class="btn btn-danger btn-sm">
                <i class="fas fa-trash"></i>
                Supprimer
            </a>
        </td>
    </tr>
{% else %}
    <tr>
        <td colspan="6">Aucun avis à valider</td>
    </tr>
{% endfor %}

    </tbody>
</table>
{% endblock %}
