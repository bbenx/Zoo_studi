{% extends 'base_admin.html.twig' %}

{% block title %}Avis index
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		.comment-column {
			max-width: 200px; /* Ajustez cette valeur selon vos besoins */
			white-space: nowrap;
			overflow: hidden;
			text-overflow: ellipsis;
		}
	</style>
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-between align-items-center mb-4">
		<h1>Avis</h1>
		<a href="{{ path('app_avis_new') }}" class="btn btn-success">
			<i class="fas fa-plus"></i>
			Ajouter un nouvel avis
		</a>
	</div>

	<table class="table table-striped">
		<thead>
			<tr>
				<th>Id</th>
				<th>Pseudo</th>
				<th class="comment-column">Commentaire</th>
				<th>Date de création</th>
				<th>Date de modification</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for avi in avis %}
				<tr>
					<td class="comment-column">{{ avi.id }}</td>
					<td>{{ avi.Pseudo }}</td>
					<td class="comment-column">{{ avi.Commentaire }}</td>
					<td>{{ avi.creationDate ? avi.creationDate|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ avi.modificationDate ? avi.modificationDate|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_avis_show', {'id': avi.id}) }}" class="btn btn-info btn-sm mr-2">
							<i class="fas fa-eye"></i>
							Voir
						</a>
						<a href="{{ path('app_avis_edit', {'id': avi.id}) }}" class="btn btn-primary btn-sm">
							<i class="fas fa-edit"></i>
							Modifier
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">Aucun enregistrement trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
