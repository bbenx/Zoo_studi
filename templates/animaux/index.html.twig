{% extends 'base_admin.html.twig' %}

{% block title %}Animaux index
{% endblock %}

{% block body %}

	<div class="d-flex justify-content-between align-items-center mb-4">
		<h1>Animaux</h1>
		{% if is_granted('ROLE_ADMIN') %}

		<a href="{{ path('app_animaux_new') }}" class="btn btn-success">
			<i class="fas fa-plus"></i>
			Ajouter un nouvel animal
		</a>
		{% endif %}
	</div>

	<table class="table table-striped text-center">
		<thead>
			<tr>
				<th>Id</th>
				<th>Prénom</th>
				<th>Race</th>
				<th>Images</th>
				<th>Date de création</th>
				<th>Date de modification</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for animal in animaux %}
				<tr>
					<td>{{ animal.id }}</td>
					<td>{{ animal.Prenom }}</td>
					<td>{{ animal.Race }}</td>
					<td>{{ animal.Images ? animal.Images|json_encode : '' }}</td>
					<td>{{ animal.creationDate ? animal.creationDate|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ animal.modificationDate ? animal.modificationDate|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_animaux_show', {'id': animal.id}) }}" class="btn btn-info btn-sm mr-2">
							<i class="fas fa-eye"></i>
							Voir
						</a>
						{% if is_granted('ROLE_ADMIN') %}
						<a href="{{ path('app_animaux_edit', {'id': animal.id}) }}" class="btn btn-primary btn-sm">
							<i class="fas fa-edit"></i>
							Modifier
						</a>
						{% endif %}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">Aucun enregistrement trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	<script>
		// Supprimer l'alerte après 3 secondes
		document.addEventListener("DOMContentLoaded", function() {
			var alerts = document.querySelectorAll('.custom-alert');
			alerts.forEach(function(alert) {
				setTimeout(function() {
					alert.remove();
				}, 3000);
			});
		});
	</script>
{% endblock %}