<form method="post" action="{{ path('app_animaux_delete', {'id': animaux.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet animal ?');" class="d-inline">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ animaux.id) }}">
	<button class="btn btn-danger ml-2">
		<i class="fas fa-trash-alt"></i>
		Supprimer
	</button>
</form>
