{% extends 'base_admin.html.twig' %}

{% block title %}Users index
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-between align-items-center mb-4">
		<h1>Utilisateurs</h1>
		<a href="{{ path('app_users_new') }}" class="btn btn-success">
			<i class="fas fa-plus"></i>
			Ajouter un nouvel utilisateur
		</a>
	</div>

	<table class="table table-striped">
		<thead>
			<tr>
				<th>Id</th>
				<th>Rôle</th>
				<th>Email</th>
				<th>Password</th>
				<th>Date de création</th>
				<th>Date de modification</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.role }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.password }}</td>
					<td>{{ user.creationDate ? user.creationDate|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ user.modificationDate ? user.modificationDate|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_users_show', {'id': user.id}) }}" class="btn btn-info btn-sm mr-2">
							<i class="fas fa-eye"></i>
							Voir
						</a>
						<a href="{{ path('app_users_edit', {'id': user.id}) }}" class="btn btn-primary btn-sm">
							<i class="fas fa-edit"></i>
							Modifier
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">Aucun enregistrement trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
