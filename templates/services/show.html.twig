{% extends 'base_admin.html.twig' %}

{% block title %}Services
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-between align-items-center mb-4">
		<h1>Services</h1>
		<div class="d-flex">
			<a href="{{ path('app_services_edit', {'id': service.id}) }}" class="btn btn-primary mr-2">
				<i class="fas fa-edit"></i>
				Modifier
			</a>
			{{ include('services/_delete_form.html.twig') }}
		</div>
	</div>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ service.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ service.nom }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ service.description }}</td>
			</tr>
			<tr>
				<th>Date de création</th>
				<td>{{ service.creationDate ? service.creationDate|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Date de modification</th>
				<td>{{ service.modificationDate ? service.modificationDate|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_services_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
{% endblock %}
