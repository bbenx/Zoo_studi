<form method="post" action="{{ path('app_services_delete', {'id': service.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');" class="d-inline">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
	<button class="btn btn-danger ml-2">
		<i class="fas fa-trash-alt"></i>
		Supprimer
	</button>
</form>
