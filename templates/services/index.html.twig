{% extends 'base_admin.html.twig' %}

{% block title %}Services index
{% endblock %}

{% block body %}

	<div class="d-flex justify-content-between align-items-center mb-4">
		<h1>Services</h1>
		<a href="{{ path('app_services_new') }}" class="btn btn-success">
			<i class="fas fa-plus"></i>
			Ajouter un nouveau service
		</a>
	</div>

	<table class="table table-striped text-center">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Description</th>
				<th>Date de création</th>
				<th>Date de modification</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for service in services %}
				<tr>
					<td>{{ service.id }}</td>
					<td>{{ service.nom }}</td>
					<td>{{ service.description }}</td>
					<td>{{ service.creationDate ? service.creationDate|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ service.modificationDate ? service.modificationDate|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_services_show', {'id': service.id}) }}" class="btn btn-info btn-sm mr-2">
							<i class="fas fa-eye"></i>
							Voir
						</a>
						<a href="{{ path('app_services_edit', {'id': service.id}) }}" class="btn btn-primary btn-sm">
							<i class="fas fa-edit"></i>
							Modifier
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">Aucun enregistrement trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script>
		// Supprimer l'alerte après 3 secondes
		document.addEventListener("DOMContentLoaded", function() {
			var alerts = document.querySelectorAll('.custom-alert');
			alerts.forEach(function(alert) {
				setTimeout(function() {
					alert.remove();
				}, 3000);
			});
		});
	</script>
{% endblock %}