{% extends 'base_admin.html.twig' %}

{% block title %}Établissement
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-between align-items-center mb-4">
		<h1>Établissement</h1>
		<div class="d-flex">
			<a href="{{ path('app_etablissement_edit', {'id': etablissement.id}) }}" class="btn btn-primary mr-2">
				<i class="fas fa-edit"></i>
				Modifier
			</a>
			{{ include('etablissement/_delete_form.html.twig') }}
		</div>
	</div>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ etablissement.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ etablissement.nom }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ etablissement.description }}</td>
			</tr>
			<tr>
				<th>Date de création</th>
				<td>{{ etablissement.creationDate ? etablissement.creationDate|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Date de modification</th>
				<td>{{ etablissement.modificationDate ? etablissement.modificationDate|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_etablissement_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
{% endblock %}
