{% extends 'base_admin.html.twig' %}

{% block title %}Nourriture index
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-between align-items-center mb-4">
		<h1>Nourriture</h1>
		<a href="{{ path('app_nourriture_new') }}" class="btn btn-success">
			<i class="fas fa-plus"></i>
			Ajouter une nouvelle nourriture
		</a>
	</div>

	<table class="table table-striped">
		<thead>
			<tr>
				<th>Id</th>
				<th>Type</th>
				<th>Quantité</th>
				<th>Date de passage</th>
				<th>Date de création</th>
				<th>Date de modification</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for nourriture in nourritures %}
				<tr>
					<td>{{ nourriture.id }}</td>
					<td>{{ nourriture.type }}</td>
					<td>{{ nourriture.quantite }}</td>
					<td>{{ nourriture.datePassage ? nourriture.datePassage|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ nourriture.creationDate ? nourriture.creationDate|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ nourriture.modificationDate ? nourriture.modificationDate|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_nourriture_show', {'id': nourriture.id}) }}" class="btn btn-info btn-sm mr-2">
							<i class="fas fa-eye"></i>
							Voir
						</a>
						<a href="{{ path('app_nourriture_edit', {'id': nourriture.id}) }}" class="btn btn-primary btn-sm">
							<i class="fas fa-edit"></i>
							Modifier
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">Aucun enregistrement trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
