<form method="post" action="{{ path('app_nourriture_delete', {'id': nourriture.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette nourriture ?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ nourriture.id) }}">
    <button class="btn btn-danger ml-2">
        <i class="fas fa-trash-alt"></i>
        Supprimer
    </button>
</form>
