{% extends 'base_admin.html.twig' %}

{% block title %}Nourriture
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-between align-items-center mb-4">
		<h1>Nourriture</h1>
		<div class="d-flex">
			<a href="{{ path('app_nourriture_edit', {'id': nourriture.id}) }}" class="btn btn-primary mr-2">
				<i class="fas fa-edit"></i>
				Modifier
			</a>
			{{ include('nourriture/_delete_form.html.twig') }}
		</div>
	</div>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ nourriture.id }}</td>
			</tr>
			<tr>
				<th>Type</th>
				<td>{{ nourriture.type }}</td>
			</tr>
			<tr>
				<th>Quantité</th>
				<td>{{ nourriture.quantite }}</td>
			</tr>
			<tr>
				<th>Date de passage</th>
				<td>{{ nourriture.datePassage ? nourriture.datePassage|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Date de création</th>
				<td>{{ nourriture.creationDate ? nourriture.creationDate|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Date de modification</th>
				<td>{{ nourriture.modificationDate ? nourriture.modificationDate|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_nourriture_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
{% endblock %}
